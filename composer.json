{
  "name": "krixon/url",
  "description": "URL value objects",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Krixon\\URL\\": "src"
    }
  },
  "scripts": {
    "test": "phpunit",
    "git:hooks:install": "cp git-hooks/* .git/hooks || >&2 echo 'Git hooks could not be installed. Please install manually.'",
    "post-install-cmd": [
      "[[ $COMPOSER_DEV_MODE == 1 ]] && composer post-install-cmd-dev || true"
    ],
    "post-install-cmd-dev": [
      "@git:hooks:install"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Kitty\\URL\\": "test"
    }
  },
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "doctrine/coding-standard": "^5.0",
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^8.0",
    "satooshi/php-coveralls": "^1.0"
  }
}
